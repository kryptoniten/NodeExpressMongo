
   	<section class="ftco-section">
		<div class="container">
			<div class="row">
				<div class="col-md-12">

					

					 
					<% articles.forEach(article => { %>
					<div class="case">
						<div class="row">
							<div class="col-md-6 col-lg-6 col-xl-8 d-flex">
								<a href="articles/<%= article.slug %>" class="img w-100 mb-3 mb-md-0" style="background-image: url(<%-article.post_image%>);"></a>
							</div>
							<div class="col-md-6 col-lg-6 col-xl-4 d-flex">
								<div class="text w-100 pl-md-3">
									<span class="subheading">Category Name</span>
									<h2><a href="articles/<%= article.slug %>"><%= article.title %></a></h2>
									<p><%- article.description  %> </p>
									 <div class="meta">
										<p class="mb-0"> <%= article.createdAt.toLocaleDateString() %></p>  
										<div><a href="#"><span class="icon-person"></span> <%-article.author.username  %> </a></div>
									
									</div>
								</div>
							</div>
						</div>
					</div>

					<% }) %>
				
				 
					
		</div>
	
	</section>

